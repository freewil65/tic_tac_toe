<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.tic_tac_toe">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".AboutActivity"
            android:label="@string/Category_About"/>

        <activity android:name=".GameMenu"
            android:label="@string/Category_Play"/>

        <activity android:name=".PlayGame_3x3"
            android:label="@string/Category_3x3"/>

        <activity android:name=".PlayGame_5x5"
            android:label="@string/Category_5x5"/>
    </application>

</manifest>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CategoryPlay">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">90dp</item>
    </style>

    <style name="CategoryAbout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="CategoryAbout_View">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Developed by:\n\n Nnanna Amobi Freeman\n\n Android Beginner \n\n freewil65@gmail.com\n</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#143e07</item>
    </style>

    <style name="CategoryTic">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:freezesText">true</item>
        <item name="android:textSize">40sp</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="Category3x3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_below">@+id/tictac</item>
        <item name="android:layout_margin">90dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Category5x5">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#ffff</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">33dp</item>
    </style>

    <style name="CategoryScore1_3x3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:freezesText">true</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#B9F6CA</item>
    </style>

    <style name="CategoryScore2_3x3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:freezesText">true</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#B9F6CA</item>
    </style>

    <style name="Category_Game_cells">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:freezesText">true</item>
        <item name="android:textSize">60sp</item>
    </style>

    <style name="CategoryScore1_5x5">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:freezesText">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#B9F6CA</item>

    </style>

    <style name="CategoryScore2_5x5">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:freezesText">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#B9F6CA</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="CategoryResetButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">Reset</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">#455A64</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0c042b"
    tools:context="com.example.android.tic_tac_toe.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#455A64"
        >

        <TextView
            android:id="@+id/player_1_text_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@string/CategoryScoreB_1"
            style="@style/CategoryScore1_3x3"
            />

        <TextView
            android:id="@+id/player_2_text_view"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            style="@style/CategoryScore2_3x3"
            android:text="@string/CategoryScoreB_2"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_00"
            style="@style/Category_Game_cells"
            />

        <Button
            android:id="@+id/button_01"
            style="@style/Category_Game_cells"
            />

        <Button
            android:id="@+id/button_02"
            style="@style/Category_Game_cells"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_10"
            style="@style/Category_Game_cells"
            />

        <Button
            android:id="@+id/button_11"
            style="@style/Category_Game_cells"
            />

        <Button
            android:id="@+id/button_12"
            style="@style/Category_Game_cells"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/button_20"
            style="@style/Category_Game_cells"
            />

        <Button
            android:id="@+id/button_21"
            style="@style/Category_Game_cells"
            />

        <Button
            android:id="@+id/button_22"
            style="@style/Category_Game_cells"
            />

    </LinearLayout>
    <Button
        android:id="@+id/button_reset"
        style="@style/CategoryResetButton"
        />
</LinearLayout>
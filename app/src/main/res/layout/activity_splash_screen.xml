<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.tic_tac_toe.SplashScreen"
    android:background="#E1BEE7">

    <TextView
        android:id="@+id/tic_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/tac_view"
        android:layout_toStartOf="@+id/tac_view"
        android:text="TIC"
        android:textColor="#F57D0A"
        android:textSize="60sp" />

    <ImageView
        android:id="@+id/tac_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/tic_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:src="@drawable/tac" />

    <TextView
        android:id="@+id/toe_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tac_view"
        android:layout_marginTop="14dp"
        android:paddingTop="10dp"
        android:text="TOE"
        android:textColor="#F57D0A"
        android:textSize="60sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GAME"
        android:textSize="60sp"
android:layout_alignParentBottom="true"
        android:layout_marginLeft="100dp"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:shadowColor="@color/colorAccent"
        android:textColor="#81127d"

        />
</RelativeLayout>
